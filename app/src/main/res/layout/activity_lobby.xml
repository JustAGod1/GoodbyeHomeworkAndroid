<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.jagod.goodbyehomework.activities.LobbyActivity">

    <fragment
        android:id="@+id/fragment2"
        class="com.jagod.goodbyehomework.activities.LobbyEnterRoomActivity"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/activity_lobby_enter_room"/>

    <fragment
        android:id="@+id/fragment3"
        class="com.jagod.goodbyehomework.activities.LobbyCreateRoomActivity"
        android:layout_width="match_parent"
        android:layout_height="93dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        tools:layout="@layout/activity_lobby_create_room"/>
</RelativeLayout>
