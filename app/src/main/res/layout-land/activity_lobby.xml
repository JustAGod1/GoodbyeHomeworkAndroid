<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.jagod.goodbyehomework.activities.LobbyActivity">

    <fragment
        android:id="@+id/fragment2"
        android:name="com.jagod.goodbyehomework.activities.LobbyEnterRoomActivity"
        android:layout_width="331dp"
        android:layout_height="167dp"
        android:layout_weight="1"
        tools:layout="@layout/activity_lobby_enter_room"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <fragment
        android:id="@+id/fragment3"
        android:name="com.jagod.goodbyehomework.activities.LobbyCreateRoomActivity"
        android:layout_width="355dp"
        android:layout_height="93dp"
        android:layout_weight="1"
        tools:layout="@layout/activity_lobby_create_room"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
